{
    "name": "iwa/application",
    "type": "project",
    "require": {
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "doctrine/orm": "^3.3",
        "doctrine/dbal": "^4.2",
        "symfony/cache": "^7.2",
        "slim/php-view": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "IWA\\Application\\": "src/"
        }
    },
    "scripts": {
        "update-db": "@php src/database/doctrine.php orm:schema-tool:update",
        "force-db": "@update-db --force",
        "test": "@php -S localhost:8000 -t public"
    }
}
